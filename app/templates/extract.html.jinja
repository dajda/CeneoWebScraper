{% extends "base.html.jinja" %}
{% block content %}
    <h2>Pobierz opinie o produkcie</h2>
    {% if error %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i i class="bi bi-heartbreak-fill"></i>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        
</div>
{% endif %}
    <form action="{{url_for('extract')}}" method="POST">
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <label for="product_id" class="col-form-label">Kod produktu</label>
            </div>
            <div class="col-auto">
                <input type="text" id="product_id" name="product_id" class="form-control">
            </div>
            <div class="col-auto">
                <input type="submit" class="btn btn-outline-secondary" value="Pobierz">
            </div>
        </div>
    </form>
{% endblock content %}